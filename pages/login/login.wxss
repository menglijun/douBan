/* pages/login/login.wxss */
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 30rpx;
}
.logo{
    width: 144rpx;
    height: 144rpx;
    margin: 30rpx 0;
}
.btn-login{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 10rpx;
}
.wechat{
    color: #fff;
    background-color: #42BD55;
}
.douban{
    margin-top: 30rpx;
    color: #42BD55;
    background-color: #fff;
    border: 2rpx solid #42BD55;
}
.agreement{
    color: #9D9D9D;
    font-size: 24rpx;
    display: flex;
    /*绝对布局*/
    position: absolute;
    bottom: 50rpx;
}
.open{
    color: #4BB65C;
    margin-left: 10rpx;
}
