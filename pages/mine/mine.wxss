.item-left .look-num{
    margin-top: 20rpx;
    display: flex;
    justify-content: start;
    align-items: center;
}
.item-left .item-num{
    color: #666;
    font-size: 46rpx;
    font-weight: bold;
}
.item-left .item-state{
    color: #666;
    margin-left: 15rpx;
}
.item .item-right{
    display: flex;
    align-items: center;
}
.item-right .text{
    color: #C1C1C1;
}
.item-right .item-open{
    background-color: rgba(0,0,0,0.1);
    margin-left: 50rpx;
    padding: 10rpx 15rpx;
    border-radius: 10rpx;
}
.item .item-line{
    width: 100%;
    height: 4rpx;
    margin-top: 10rpx;
    background-color: rgba(0,0,0,0.1);
}


