/* pages/mine/mine.wxss */
page{
    height: 100%;
}
.container{
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.login-wrapper{
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    width: 100%;
    height: 400rpx;
}
.login-wrapper .login{
    width: 300rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 35rpx;
    background-color: white;
    border-radius: 40rpx;
    text-align: center;
}
.login-wrapper .login-img{
    width: 100%;
    height: 100%;
    /*绝对布局，是整个page的直接子view*/
    position: absolute;
    left: 0;
    right: 0;
    /*view层级设置*/
    z-index: -1;
}
.version{
    font-size: 30rpx;
    color: #999;
    justify-content: center;
    margin-top: 30rpx;
    margin-bottom: 50rpx;
    text-align: center;
}
.list-container{
    width: 100%;
    margin-top: 30rpx;
}
.my-book-container{
    padding-left: 30rpx;
    padding-right: 40rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;

}
.my-book-container .my-book{
    font-weight: bold;
    font-size: 36rpx;

}
.my-book-container .login-look{
    color: #838383;
    font-size: 30rpx;
    display: flex;
    align-items: center;
}
.list-container .arrow{
    width: 20rpx;
    height: 20rpx;
    margin-left: 15rpx;
    border-right: 4rpx solid #7F7F7F;
    border-bottom: 4rpx solid #7F7F7F;
    transform: rotate(-45deg);
}
.list-container .item{
    padding-left: 30rpx;
    padding-right: 30rpx;
    margin-top: 20rpx;
    display: flex;
    align-items: center;
}
