/* pages/mine/mine.wxss */
.container{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.login-wrapper{
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    width: 100%;
    height: 400rpx;
    /*background-color: green;*/
}
.login-wrapper .login{
    width: 300rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 35rpx;
    background-color: white;
    border-radius: 40rpx;
    text-align: center;
}
.login-wrapper .login-img{
    width: 100%;
    height: 100%;
    /*绝对布局，是整个page的直接子view*/
    position: absolute;
    left: 0;
    right: 0;
    /*view层级设置*/
    z-index: -1;
}
.version{
    width: 100%;
    font-size: 30rpx;
    color: #999;
    justify-content: center;
    position: absolute;
    bottom: 50rpx;
    text-align: center;
}