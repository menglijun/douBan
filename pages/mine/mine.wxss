.item .icon{
    width: 100rpx;
    height: 100rpx;
    margin-right: 30rpx;
}
.item .item-content{
    color: #333;
    font-size: 30rpx;
    flex-grow: 1;
}
.item .item-info{
    color: #333;
    font-size: 30rpx;
    margin-right: 10rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
